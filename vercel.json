{
	"version": 2,
	"builds": [
		{
			"src": "api/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "build/**",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "build"
			}
		}
	],
	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/api/index.js"
		},
		{
			"source": "/(.*)",
			"destination": "/build/$1"
		}
	]
}
